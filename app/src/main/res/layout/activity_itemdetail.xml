<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:elevation="1dp">

    <com.zoptal.chinamoonbuffet.common.InteractiveScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:background="@color/colorblack"
        android:fillViewport="true"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    >
<RelativeLayout
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/rel_price"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:maxHeight="150dp"
    android:minWidth="500dp"
    />

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/rel_price"
        android:layout_alignParentRight="true"
        android:background="@mipmap/priceitem"
       >

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


</RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_below="@+id/rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv_name1"
        android:layout_below="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        />

 <Button
    android:id="@+id/btn_addcart"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:text="ADD TO CART"
    android:textColor="#ffffff"
    android:textSize="23dp"
    android:textStyle="bold"
    android:background="@mipmap/add_to_cart_button"
    android:layout_below="@+id/tv_name1"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_below="@+id/btn_addcart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
            android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"/>

</RelativeLayout>
    </LinearLayout>
    </com.zoptal.chinamoonbuffet.common.InteractiveScrollView>
    </android.support.v4.widget.DrawerLayout>