<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:elevation="1dp">

    <com.zoptal.chinamoonbuffet.common.InteractiveScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:background="#ffffff"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F1F1F1"
                >
                <RelativeLayout
                    android:id="@+id/rel_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent">

                    <EditText
                        android:id="@+id/ed_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint=" Name"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:background="@drawable/textfieldborderaddress"
                        android:padding="8dp"
                        android:textCursorDrawable="@drawable/blackcursor"
                        android:textColorHint="#a9a9a9"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_email"
                    android:layout_below="@+id/rel_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent">

                    <EditText
                        android:id="@+id/ed_email"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint=" Email"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:background="@drawable/textfieldborderaddress"
                        android:padding="8dp"
                        android:textCursorDrawable="@drawable/blackcursor"
                        android:textColorHint="#a9a9a9"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rel_phone"
                    android:layout_below="@+id/rel_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent">

                    <EditText
                        android:id="@+id/ed_phone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint=" Phone Number"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:maxLength="12"
                         android:background="@drawable/textfieldborderaddress"
                        android:padding="8dp"
                        android:textCursorDrawable="@drawable/blackcursor"
                        android:textColorHint="#a9a9a9"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_numofpeople"
                    android:layout_below="@+id/rel_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent">

                    <EditText
                        android:id="@+id/ed_numofpeoplle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint=" Number Of People"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:background="@drawable/textfieldborderaddress"
                        android:padding="8dp"
                        android:textCursorDrawable="@drawable/blackcursor"
                        android:textColorHint="#a9a9a9"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_date"
                    android:layout_below="@+id/rel_numofpeople"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent">

                     <TextView
                         android:textColor="#000000"
                        android:id="@+id/tv_date"
                        android:hint="2016-12-05"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:textSize="14dp"
                        android:padding="10dp"
                         android:textColorHint="#a9a9a9"
                        android:background="@drawable/textfieldborderaddress"
                        android:layout_toRightOf="@+id/img_cal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />
                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/rel_time"
                    android:layout_below="@+id/rel_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent">

                    <TextView
                        android:textColor="#000000"
                        android:id="@+id/tv_time"
                        android:textColorHint="#a9a9a9"
                        android:hint="12:12"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:textSize="14dp"
                        android:padding="10dp"
                        android:background="@drawable/textfieldborderaddress"
                        android:layout_toRightOf="@+id/img_cal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_desc"
                    android:layout_below="@+id/rel_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent">

                    <EditText
                        android:id="@+id/ed_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=" Description"
                        android:textSize="14dp"
                        android:background="@drawable/textfieldborderaddress"
                        android:padding="8dp"
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:textCursorDrawable="@drawable/blackcursor"
                        android:textColorHint="#a9a9a9"
                        />
                </RelativeLayout>


                <Button
                    android:id="@+id/btn_continue"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:text="SEND REQUEST"
                    android:textColor="#ffffff"
                    android:textSize="23dp"
                     android:textStyle="bold"
                    android:layout_marginBottom="250dp"
                    android:background="@mipmap/add_to_cart_button"
                    android:layout_below="@+id/rel_desc"/>

            </RelativeLayout>

    </LinearLayout>
    </com.zoptal.chinamoonbuffet.common.InteractiveScrollView>
</android.support.v4.widget.DrawerLayout>