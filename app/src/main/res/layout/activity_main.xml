    <LinearLayout
        android:id="@+id/leftLL"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="130dp"
            android:background="@drawable/home">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rel_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/noti_img1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:background="@mipmap/notification" />
            <!--<TextView-->
                <!--android:id="@+id/total_noti11"-->
                <!--android:layout_width="17dp"-->
                <!--android:layout_height="15dp"-->
                <!--android:layout_marginLeft="32dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:text="  0"-->
                <!--android:background="@mipmap/notification_circle"-->
                <!--android:textStyle="bold"-->
                <!--android:textSize="10dp"-->
                <!--android:textColor="#ffffff"/>-->
            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleView_image"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                 />
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_below="@+id/circleView_image"
                android:layout_marginTop="5dp"
               android:hint=" "
                android:textColorHint="#ffffff"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="LOG OUT"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#ffffff"/>
            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="5dp"
                android:layout_below="@+id/tv_username"
                android:layout_marginTop="5dp"
                android:background="#929292"></RelativeLayout>

        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerView"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_slide"
            android:clickable="true"
            android:focusable="true"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
