                <!--android:layout_toRightOf="@+id/img_cart"-->
                <!--android:layout_marginRight="3dp"-->
                <!--android:src="@drawable/callfloat"-->
                <!--/>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/menu_top"
            android:id="@+id/rel_slider">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="130dp">
            </android.support.v4.view.ViewPager>

        </RelativeLayout>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/activity_main_content_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linr"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@mipmap/fotter_background"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <LinearLayout

                android:id="@+id/linear_b1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
               android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu"
                    android:textColor="#ffffff"
                    android:id="@+id/textView"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                   android:layout_gravity="center"
                    android:layout_weight="1" />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/img1"
                android:background="@mipmap/divider_line_fotter"
                 />
            <LinearLayout
                android:id="@+id/linear_b2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coupons"
                    android:textColor="#ffffff"
                    android:id="@+id/textView2"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center"
                  />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/img2"
                android:background="@mipmap/divider_line_fotter"
                />
            <LinearLayout
                android:id="@+id/linear_b3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Scan"
                    android:textColor="#ffffff"
                    android:id="@+id/textView3"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                   />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/img3"
                android:background="@mipmap/divider_line_fotter"
                />
            <LinearLayout

                android:id="@+id/linear_b4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reserve"
                    android:textColor="#ffffff"
                    android:id="@+id/textView4"
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                 />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/img4"
                android:background="@mipmap/divider_line_fotter"
                />

            <LinearLayout

                android:id="@+id/linear_b5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Loyalty"
                    android:textColor="#ffffff"
                    android:id="@+id/textView5"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                     />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

