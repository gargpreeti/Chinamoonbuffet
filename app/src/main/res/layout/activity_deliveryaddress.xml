<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:elevation="1dp">

    <com.zoptal.chinamoonbuffet.common.InteractiveScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/colorblack"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F1F1F1"
                >
                <RelativeLayout
                    android:id="@+id/rel_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent">

                    <EditText
                        android:id="@+id/ed_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint=" Name"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:background="@drawable/textfieldborderaddress"
                        android:padding="8dp"
                        android:textCursorDrawable="@drawable/blackcursor"
                        android:textColorHint="#a9a9a9"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_email"
                    android:layout_below="@+id/rel_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent">

                    <EditText
                        android:id="@+id/ed_email"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint=" Email"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:background="@drawable/textfieldborderaddress"
                        android:padding="8dp"
                        android:textCursorDrawable="@drawable/blackcursor"
                        android:textColorHint="#a9a9a9"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rel_address"
                    android:layout_below="@+id/rel_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent">



                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Location"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:background="@drawable/textfieldborderaddress"
                        android:padding="8dp"
                        android:textCursorDrawable="@drawable/blackcursor"
                        android:textColorHint="#a9a9a9">

                        <requestFocus />
                    </AutoCompleteTextView>


                    <!---->
                    <!--<EditText-->
                        <!--android:id="@+id/ed_address"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="70dp"-->
                        <!--android:hint=" Address"-->
                        <!--android:layout_margin="3dp"-->
                        <!--android:textSize="14dp"-->
                        <!--android:singleLine="true"-->
                        <!--android:imeOptions="actionNext"-->
                        <!--android:background="@drawable/textfieldborderaddress"-->
                        <!--android:padding="8dp"-->
                        <!--android:textCursorDrawable="@drawable/blackcursor"-->
                        <!--android:textColorHint="#a9a9a9"-->
                        <!--/>-->
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_zipcode"
                    android:layout_below="@+id/rel_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent">

                    <EditText
                        android:id="@+id/ed_zipcode"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint=" Zip Code"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:background="@drawable/textfieldborderaddress"
                        android:padding="8dp"
                        android:textCursorDrawable="@drawable/blackcursor"
                        android:textColorHint="#a9a9a9"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_phnnum"
                    android:layout_below="@+id/rel_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent">

                    <EditText
                        android:id="@+id/ed_phnnum"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint=" Phone Number"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:background="@drawable/textfieldborderaddress"
                        android:padding="8dp"
                        android:textCursorDrawable="@drawable/blackcursor"
                        android:textColorHint="#a9a9a9"
                        />
                </RelativeLayout>


                <Button
                    android:id="@+id/btn_continue"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:text="CONTINUE"
                    android:textColor="#ffffff"
                    android:textSize="23dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:background="@mipmap/add_to_cart_button"
                    android:layout_below="@+id/rel_phnnum"/>

            </RelativeLayout>





        </LinearLayout>
    </com.zoptal.chinamoonbuffet.common.InteractiveScrollView>
</android.support.v4.widget.DrawerLayout>